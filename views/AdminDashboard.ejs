<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <!-- Linking to a basic CSS file for styling -->
    <link rel="stylesheet" href="styles.css">
    <!-- Linking to a CDN for Font Awesome icons (for dashboard widgets) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">    <!-- Some basic inline styles for simplicity -->
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f7fc;
        }
        header {
            background-color: #333;
            color: white;
            padding: 15px 20px;
            text-align: center;
        }
        .container {
            display: flex;
        }
        .sidebar {
            width: 250px;
            background-color: #2c3e50;
            color: white;
            padding: 20px;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            transition: 0.3s;
        }
        .sidebar a {
            display: block;
            color: white;
            padding: 10px;
            text-decoration: none;
            margin: 10px 0;
        }
        .sidebar a:hover {
            background-color: #16a085;
        }
        .main-content {
            margin-left: 270px;
            padding: 20px;
            flex: 1;
        }
        .card {
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            padding: 20px;
            margin-bottom: 20px;
        }
        .card h3 {
            margin-top: 0;
        }
        .card .icon {
            font-size: 2em;
            color: #16a085;
        }
        .row {
            display: flex;
            gap: 20px;
            flex-wrap: wrap;
        }
        .col {
            flex: 1;
            min-width: 250px;
        }
    </style>
</head>
<body>

    <!-- Header Section -->
    <header>
        <h1>Admin Dashboard</h1>
    </header>

    <!-- Main Container -->
    <div class="container">

        <!-- Sidebar Section -->
        <div class="sidebar">
            <h2>Menu</h2>
            <a href="#" id = "insertCities"><i class="fas fa-cogs"></i> Create Or Delete Cities</a>
            <a href="#" id = "insertGames"><i class="fas fa-cogs"></i> Create Or Delete Games</a>
            <a href="#" id = "insertAirport"><i class="fas fa-cogs"></i> Create Or Delete Airport</a>
            <a href="#" id = "insertTeams"><i class="fas fa-cogs"></i> Create Or Delete Teams</a>
            <a href="#" id = "insertStadiums"><i class="fas fa-cogs"></i> Create Or Delete Stadiums</a>
            <a href="#" id = "insertTickets"><i class="fas fa-cogs"></i> Create Or Delete Tickets</a>
            <a href="#" id = "insertAdmin"><i class="fas fa-cogs"></i> Create Or Delete Admins</a>

        </div>

        <!-- Main Content Section -->
        <div class="main-content">
            <h2>Welcome, Admin</h2>
            <p>INSERT INSTRUCTIONS ON INSERTING DATA HERE</p>

            <!-- Dashboard Cards -->
            <div class="row">
                <!-- Card 1 -->
                <div id="WhereInsertAdminCardGoes"></div>
                <div id="WhereInsertCitiesCardGoes"></div>
                <div id="WhereInsertTeamsCardGoes"></div>
                <div id="WhereInsertTicketsCardGoes"></div>
                <div id="WhereInsertStadiumsCardGoes"></div>
                <div id="WhereInsertGamesCardGoes"></div>
                <div id="WhereInsertAirportCardGoes"></div>

                <div class="col">
                        
                </div>
            </div>

            <!-- Activity Section -->
            <div class="card">
                <h3>Recent Activity</h3>
                <ul>
                    <li>City "Nacogdoches" Was Created</li>
                    <li>Admin "Talmidge" was Created</li>
                    <li>Game "2016 Playoffs" was created</li>
                </ul>
            </div>
        </div>
    </div>

    <script>
        document.getElementById('insertAdmin').addEventListener('click', function(event) {
            event.preventDefault();
            const insertAdminCard = '<div class="card">\
                            <i class="icon fas fa-users"></i>\
                            <h3>Create New Admin Account</h3>\
                            <form action="/createAdmin" method="POST">\
                                <label for="Username">Username:</label>\
                                <input type="text" id="Username" name="Username" required><br><br>\
                                <label for="Password">Password:</label>\
                                <input type="text" id="Password" name="Password" required><br><br>\
                                <button type="submit">Create New Admin User</button>\
                            </form><br><br>\
                        <i class="icon fas fa-bahai"></i><i class="icon fas fa-user"></i>\
                        <h3>Delete Admin By Name</h3>\
                        <form action="/removeAdminByName" method="POST">\
                            <label for="adminName">Username:</label>\
                            <input type="text" id="adminName" name="adminName" required> <br><br>\
                            <button type="submit">Delete Admin</button>\
                        </form>\
                        </div>';
            document.getElementById('WhereInsertAdminCardGoes').innerHTML = insertAdminCard;
        });
        document.getElementById('insertCities').addEventListener('click', function(event) {
            event.preventDefault();
            const insertCitiesCard = '<div class="card"><i class="icon fas fa-city"></i>\
                        <h3>Create New City</h3>\
